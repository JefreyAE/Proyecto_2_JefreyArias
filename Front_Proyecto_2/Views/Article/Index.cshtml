@model IEnumerable<Front_Proyecto_2.Models.Article>

@{
    ViewData["Title"] = "Listado de Artículos";
}

<h1>Listado de Artículos</h1>

<p>
    <a asp-action="Create">Registrar nuevo artículo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id de rastreo
            </th>
            <th>
                Fecha de ingreso
            </th>
            <th>
                Precio
            </th>
            <th>
                Peso
            </th>
            <th>
                Descripción del artículo
            </th>
            <th>
                Código del cliente
            </th>
            <th>
                Código del transportista
            </th>
            <th>
                Estado del artículo
            </th>
            <!--<th></th>-->
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrackingId)
            </td>
            <td>
                @item.AdmissionDate.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DispatcherId)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <!--<td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>-->
        </tr>
}
    </tbody>
</table>
