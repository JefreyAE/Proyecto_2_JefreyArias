@model Front_Proyecto_2.Models.Client

@{
    ViewData["Title"] = "Registro Clientes";
}

<h1>Registro de clientes</h1>

<h4>Ingresa los datos del cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
          @if (ViewData["Message_error"] != null)
        {
            <label class="message_error alert alert-error">@ViewData["Message_error"]</label>     
        }
         @if (ViewData["Message_success"] != null)
        {
            <label class="message_success alert alert-success">@ViewData["Message_success"]</label>     
        }
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientPersonalId" class="control-label">Cédula</label>
                <input asp-for="ClientPersonalId" class="form-control" />
                <span asp-validation-for="ClientPersonalId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label">Fecha de nacimiento</label>
                <input type="date" asp-for="Birthday" class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
   <a asp-controller="Home" asp-action="Index">Regresar al inicio</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
